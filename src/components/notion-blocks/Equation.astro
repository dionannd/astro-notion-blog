---
import katex from 'katex'
import type * as interfaces from 'lib/interfaces'

export interface Props {
  block: interfaces.Block | any
}

const { block } = Astro.props
---

<div
  class="equation"
  set:html={katex.renderToString(block.Equation.Expression, {
    throwOnError: false,
  })}
/>

<style>
  .equation {
    text-align: center;
  }
</style>
