---
import type * as interfaces from 'lib/interfaces'
import { getPostByPageId } from 'lib/notion/client'
import { getPostLink } from 'lib/blog-helpers'
import 'styles/notion-color.css'

export interface Props {
  block: interfaces.Block | any
}

const { block } = Astro.props
let post: interfaces.Post | any = null
if (block.LinkToPage.Type === 'page_id') {
  post = await getPostByPageId(block.LinkToPage.PageId)
}
---

{
  post ? (
    <p>
      <a href={`${getPostLink(post.Slug)}`} class="link">
        <span class="icon">
          {post.Icon.Emoji ? post.Icon.Emoji : 'ðŸ“„'}
          <img src="/images/icon-arrow-link.svg" class="icon-link" alt="" />
        </span>
        <span class="text">{post.Title}</span>
      </a>
    </p>
  ) : (
    <p>
      <a class="link">
        <span class="icon">
          ðŸš«
          <img src="/images/icon-arrow-link.svg" class="icon-link" alt="" />
        </span>
        <span class="text">Post not found</span>
      </a>
    </p>
  )
}

<style>
  .link {
    font-weight: 600;
    display: flex;
    gap: 4px;
  }
  .icon {
    height: fit-content;
    flex-shrink: 0;
    position: relative;
  }
  .icon-link {
    display: block;
    position: absolute;
    top: 1em;
    right: 0;
    width: 8px;
    height: 8px;
  }
</style>
