---
import { ENABLE_LIGHTBOX } from 'server-constants'
import type * as interfaces from 'lib/interfaces'
import { filePath } from 'lib/blog-helpers'
import Caption from './Caption.astro'

export interface Props {
  block: interfaces.Block | any
}

const { block } = Astro.props

let image = ''
if (block.Image.External) {
  image = block.Image.External.Url
} else if (block.Image.File) {
  image = filePath(new URL(block.Image.File.Url))
}
---

<figure class="flex my-0 mx-auto">
  {
    image && (
      <div class="mx-auto">
        <div>
          {ENABLE_LIGHTBOX ? (
            <a data-fslightbox href={image} data-type="image">
              <img class="rounded-xl block" src={image} alt="image block" />
            </a>
          ) : (
            <img class="rounded-xl block" src={image} alt="image block" />
          )}
        </div>
        <Caption richTexts={block.Image.Caption} />
      </div>
    )
  }
</figure>
