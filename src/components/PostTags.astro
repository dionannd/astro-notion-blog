---
import type { Post, SelectProperty } from 'lib/interfaces'
import { getTagLink } from 'lib/blog-helpers'
import 'styles/notion-color.css'

export interface Props {
  post: Post
  enableLink?: boolean
}

const { post, enableLink = true } = Astro.props
---

<div class="text-[0.9rem] flex flex-wrap gap-[6px] mb-3">
  {
    post.Tags &&
      post.Tags.length > 0 &&
      post.Tags.map((tag: SelectProperty) => {
        if (enableLink) {
          return (
            <a
              class="flex items-center flex-shrink min-w-0 rounded py-0.5 px-1.5 leading-5 bg-orange-300 dark:bg-orange-500 hover:bg-white hover:dark:bg-white hover:text-orange-400 hover:dark:text-orange-500 text-black hover:scale-105 transition-all duration-300"
              href={getTagLink(tag.name).toLowerCase()}
            >
              {tag.name.toLowerCase()}
            </a>
          )
        }
        return <span class={`tag ${tag.color}`}>{tag.name}</span>
      })
  }
</div>
