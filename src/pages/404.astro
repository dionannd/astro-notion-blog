---
import BaseHead from 'components/BaseHead.astro'
import Header from 'components/Header.astro'
import Footer from 'components/Footer.astro'
import { PUBLIC_SITE_TITLE, PUBLIC_SITE_DESCRIPTION } from 'server-constants'
import Body from 'components/Body.astro'
import Content from 'components/Content.astro'
import { IoChevronForward } from 'react-icons/io5/index.js'
import Masthead from 'components/Masthead.astro'
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={PUBLIC_SITE_TITLE} description={PUBLIC_SITE_DESCRIPTION} />
  </head>
  <Body>
    <Header title={PUBLIC_SITE_TITLE} />
    <main class="pt-[56px]">
      <Masthead />
      <Content>
        <section>
          <h1 class="text-3xl text-center font-mplus mt-12 mb-8">
            Oops, not found
          </h1>
          <div class="text-center py-4">
            <a
              class="inline-flex items-center gap-1 underline underline-offset-2 decoration-orange-500"
              href="/"
              >Go to Index <IoChevronForward />
            </a>
          </div>
        </section>
      </Content>
    </main>
    <Footer />
  </Body>
</html>
